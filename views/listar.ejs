<%-include('cabecalho.ejs')%>
<form method="POST">
    <input type="text" name="pesquisa" placeholder="Pesquisar">
    <input type="submit">
</form>
<table>
    <tr>
        <th>ID</th>
        <th>NOME</th>
        <th>ENDEREÇO</th>
        <th>TELEFONE</th>
        <th>EDITAR</th>
        <th>DELETAR</th>
    </tr>
    <% listaAlunos.forEach(function(aluno){ %>
    <tr>
        <td><%=aluno._id%></td>
        <td><%=aluno.nome%></td>
        <td><%=aluno.endereco%></td>
        <td><%=aluno.telefone%></td>
        <td>
            <a href="/edit/<%=aluno._id%>"><img src="edit.png" alt="Botão de Editar"></a>
        </td>
        <td>
            <a href="/del/<%=aluno._id%>">
                <img src="delete.png" alt="Botão de Deletar">
            </a>
        </td>
    </tr>
    <% }) %>
</table>
<h2><%=msg%></h2>
<%-include('rodape.ejs')%>